  "components": {
    "schemas": {
      "AuthSignupResponse": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "minLength": 1,
            "description": "Created user ID"
          }
        },
        "required": [
          "userId"
        ]
      },
      "AuthSignupDto": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "minLength": 1,
            "description": "First name"
          },
          "lastName": {
            "type": "string",
            "minLength": 1,
            "description": "Last name"
          },
          "role": {
            "oneOf": [
              {
                "const": "admin"
              },
              {
                "const": "student"
              }
            ],
            "description": "Role, defaults to student"
          },
          "medicalCollegeName": {
            "type": "string",
            "minLength": 1,
            "description": "Medical college name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email"
          },
          "phone": {
            "type": "string",
            "pattern": "^[+]?[0-9]{7,15}$",
            "description": "E.164-ish phone, 7-15 digits, optional leading +"
          },
          "mmbsPassingYear": {
            "type": "number",
            "minimum": 1950,
            "maximum": 2100,
            "description": "MBBS passing year"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "description": "Password (min 8 chars)"
          }
        },
        "required": [
          "firstName",
          "lastName",
          "medicalCollegeName",
          "email",
          "password"
        ]
      },
      "AuthLoginResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "minLength": 1
          },
          "user": {
            "$ref": "#/components/schemas/AuthLoginResponseUser"
          }
        },
        "required": [
          "accessToken",
          "user"
        ]
      },
      "AuthLoginResponseUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "role": {
            "oneOf": [
              {
                "const": "admin"
              },
              {
                "const": "student"
              }
            ]
          },
          "isEmailVerified": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "firstName",
          "lastName",
          "email",
          "role",
          "isEmailVerified"
        ]
      },
      "AuthLoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "description": "Password"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AuthVerifyEmailDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email"
          },
          "token": {
            "type": "string",
            "minLength": 16,
            "description": "Verification token"
          }
        },
        "required": [
          "email",
          "token"
        ]
      },
      "AuthSendForgotPasswordDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email"
          }
        },
        "required": [
          "email"
        ]
      },
      "AuthResetPasswordDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email"
          },
          "token": {
            "type": "string",
            "minLength": 16,
            "description": "Reset token"
          },
          "newPassword": {
            "type": "string",
            "minLength": 8,
            "description": "New password"
          }
        },
        "required": [
          "email",
          "token",
          "newPassword"
        ]
      },
      "RefreshTokenBody": {
        "type": "object",
        "properties": {
          "refreshToken": {
            "type": "string"
          }
        },
        "required": [
          "refreshToken"
        ]
      }
    },
    "securitySchemes": {
