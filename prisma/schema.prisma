generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

enum UserRole {
  student
  admin
}

enum ExamIntakeType {
  JANUARY
  APRIL_MAY
  SEPTEMBER
}

enum QuestionCategoryType {
  BASIC
  CLINICAL
}

model User {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName          String
  lastName           String
  role               UserRole @default(student)
  isEmailVerified    Boolean  @default(false)
  medicalCollegeName String
  email              String   @unique
  phone              String?
  mmbsPassingYear    String?
  password           String
  avatarURL          String?
  isDeleted          Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  isProfileCompleted Boolean  @default(false)
}

model ExamIntake {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  type        ExamIntakeType
  displayName String
  isActive    Boolean        @default(true)
  isDefault   Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model QuestionCategory {
  id          String               @id @default(auto()) @map("_id") @db.ObjectId
  displayName String
  type        QuestionCategoryType
  isActive    Boolean              @default(true)
  isDefault   Boolean              @default(false)
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
}

model Question {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  question               String
  aiRephrasedQuestion    String?
  mainQuestion           String
  intake                 String   @db.ObjectId
  categories             String[] @db.ObjectId
  explanation            String
  description            String?
  year                   String
  correctAnswer          String
  options                Json
  isDeleted              Boolean  @default(false)
  sourceFile             String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  isQuestionUpdateLocked Boolean  @default(false)
  lastUpdatedBy          String?
}
